config BACKPORT_MT76x0_COMMON
	tristate
	depends on !MT76x0_COMMON
	select BACKPORT_MT76x02_LIB

config BACKPORT_MT76x0U
	tristate "MediaTek MT76x0U (USB) support"
	depends on !MT76x0U
	select BACKPORT_MT76x0_COMMON
	select BACKPORT_MT76x02_USB
	depends on BACKPORT_MAC80211
	depends on USB
	help
	  This adds support for MT7610U-based wireless USB dongles.

config BACKPORT_MT76x0E
	tristate "MediaTek MT76x0E (PCIe) support"
	depends on !MT76x0E
	select BACKPORT_MT76x0_COMMON
	depends on BACKPORT_MAC80211
	depends on PCI
	help
	  This adds support for MT7610/MT7630-based wireless PCIe devices.
